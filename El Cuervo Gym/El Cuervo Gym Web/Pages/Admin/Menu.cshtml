@page
@model El_Cuervo_Gym_Web.Pages.Admin.MenuModel
@{
    ViewData["Title"] = "Menú Principal";
    Layout = "_LayoutAdmin";
}

<!DOCTYPE html>
<html>
<body>
    <div class="container mt-5">
        <h2>Lista de Asistencias Hoy</h2>
        @if (Model.Ingresos != null && Model.Ingresos.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Número de Socio</th>
                        <th>Horario de Ingreso</th>
                        <th>Tipo de Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ingreso in Model.Ingresos)
                    {
                        <tr>
                            <td>@ingreso.NombreCompleto</td>
                            <td>@ingreso.IdSocio</td>
                            <td>@ingreso.FechaIngreso</td>
                            <td>@ingreso.Tipo.ToString()</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a href="/Admin/Socio/DetalleSocio/@ingreso.IdSocio" class="btn btn-dark">Ver Detalles</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No hay ingresos registrados en el día de hoy.</p>
        }
    </div>
</body>
</html>